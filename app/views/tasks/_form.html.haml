= form_with(model: task, local: true) do |form|
  - if task.errors.any?
    #error_explanation
      %h2
        = pluralize(task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - task.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :content
    = form.text_area :content
  .field
    = form.label :start_date
    = form.datetime_select :start_date, :minute_step => 15
  .field
    = form.label :end_date
    = form.datetime_select :end_date, :minute_step => 15
  .field
    = form.label :status
    = form.select :status, ["New","WIP","Done","Pending"], :selected=>task.status
  .actions
    = form.submit
